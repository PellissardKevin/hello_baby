#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient

<Diagrams>:

    BoxLayout:
        orientation: 'vertical'
        spacing: '5dp'
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                texture: Gradient.vertical(get_color_from_hex("CC99FF"), get_color_from_hex("99CCFF"))

        Button:
            size_hint: None, None
            size: dp(24), dp(24)
            pos_hint: {'top': 1.0, 'left': 1.0}
            background_normal: "client/images/fleche_retour.png"
            on_press: root.manager.current = 'home_user'

        BoxLayout:
            orientation: 'horizontal'
            spacing: '5dp'
            size: dp(40), dp(40)
            pos_hint: {'top': 1.0}
            size_hint_y: None
            height: dp(25)

            Image:
                source: "client/images/hello_baby_logo_band.png"
                allow_stretch: False
                allow_stretch: False
                size: dp(32), dp(32)

            Label:
                text: 'Hello Baby !'
                color: 0, 0, 0, 1
                font_size: 30
                padding: ('5dp', '5dp')
                background_color: "CC99FF"

            Image:
                source: "client/images/photo_profil.png"
                allow_stretch: False
                allow_stretch: False
                size: dp(32), dp(32)

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: ('50dp', '300dp')
            pos_hint: {'top': 1.0}

            Label:
                text:'Diagrammes'
                color: 0 , 0 , 0 , 1
                size_hint_y: None
                height: 50
                margin: 20
                canvas.before:
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]
                        texture: Gradient.vertical(get_color_from_hex("80FF80"), get_color_from_hex("C6FFC6"))

        BoxLayout:
            id: plotly_graph_layout
            orientation: 'vertical'
            spacing: '5dp'
            size_hint_y: None
            height: dp(100)

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: (50, 50)

            Label:
                id: quantity_on_day
                text:''
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x': 0.5, 'top': 0.8}
                color: 0, 0, 0, 1
                font_size: 14

            Button:
                text:'Ajouter un biberon'
                size_hint_y: None
                height: dp(50)
                margin: 20
                background_color: "0000000"
                canvas.before:
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        texture: Gradient.vertical(get_color_from_hex("0080C0"), get_color_from_hex("28B9FF"))
                        radius: [15, 15, 15, 15]
                on_press: root.enter_data_bib()

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(50)
            Button:
                text: 'Contact'
                color: 1, 1, 1, 1
                background_color: 'blue'
                font_size: 20
                height: dp(25)
                on_press : root.manager.current = 'contact'
