#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient

<Profil_baby>:
    firstname: firstname
    lastname: lastname
    birthday: birthday
    weight: weight
    size_baby: size_baby

    BoxLayout:
        orientation: 'vertical'
        spacing: '5dp'
        padding: '5dp'

        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                texture: Gradient.vertical(get_color_from_hex("CC99FF"), get_color_from_hex("99CCFF"))

        Button:
            size_hint: None, None
            size: dp(24), dp(24)
            pos_hint: {'top': 1.0, 'left': 1.0}
            background_normal: "client/images/fleche_retour.png"
            on_press: root.manager.current = "babyhome"

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'

            Label:
                text: 'Hello Baby !'
                color: 0, 0, 0, 1
                font_size: 30
                size_hint: 1.0, 0.2
                padding: ('10dp', '10dp')
                background_color: "#99CCFF"

            Image:
                source: "client/images/hello_baby_logo.png"
                allow_stretch: False
                keep_ratio: True
                size_hint_y: 0.5

            Label:
                text: 'Profil bébé'
                color: 0, 0, 0, 1
                font_size: 12
                size_hint: 1.0, 0.2
                padding: ('10dp', '10dp')

        GridLayout:
            cols: 2
            spacing: '5dp'
            padding: '30dp'

            Label:
                text: 'Prénom :*'
                color: 0, 0, 0, 1
            TextInput:
                id: firstname
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Nom :'
                color: 0, 0, 0, 1
            TextInput:
                id: lastname
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Date de naissance :*'
                color: 0, 0, 0, 1
            TextInput:
                id: birthday
                padding: 20, 20, 20, 20
                font_size: 12
                on_focus: root.setData.open(birthday)

            Label:
                text: 'Poids actuel :'
                color: 0, 0, 0, 1
            TextInput:
                id: weight
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Taille :'
                color: 0, 0, 0, 1
            TextInput:
                id: size_baby
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

        Label:
            text: '*obligatoire'
            color: 0, 0, 0, 1
            font_size: 10
            size_hint: 0.2, 0.2
            padding: ('10dp', '10dp')

        Button:
            text: 'Modifier le profil'
            color: 1, 1, 1, 1
            size_hint: None, None
            size: 200, 50
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_color: "0000000"
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    texture: Gradient.vertical(get_color_from_hex("0080C0"), get_color_from_hex("28B9FF"))
                    radius: [15, 15, 15, 15]
            on_press:
                root.upgrade_baby(root.ids.firstname.text, root.ids.birthday.text, root.ids.lastname.text, root.ids.size_baby.text, root.ids.weight.text)

        Button:
            text: 'Supprimer le Profil du bébé'
            color: 1, 1, 1, 1
            size_hint: None, None
            size: 200, 50
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_color: "0000000"
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    texture: Gradient.vertical(get_color_from_hex("EA003A"), get_color_from_hex("FF6C92"))
                    radius: [15, 15, 15, 15]
            on_press:
                root.delete_baby(root.ids.firstname.text, root.ids.birthday.text, root.ids.lastname.text, root.ids.size_baby.text, root.ids.weight.text)
                root.manager.current = "home_user"
