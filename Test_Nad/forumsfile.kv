#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient

<Forums>:

	BoxLayout:
		orientation: 'vertical'
		spacing: '5dp'
		canvas:
			Rectangle:
				pos: self.pos
				size: self.size
				texture: Gradient.vertical(get_color_from_hex("CC99FF"), get_color_from_hex("99CCFF"))

		Button:
			size_hint: None, None
			size: dp(24), dp(24)
			pos_hint: {'top': 1.0, 'left': 1.0}
			background_normal: "fleche_retour.png"
			on_press: root.goBack()

		BoxLayout:
			orientation: 'horizontal'
			spacing: '5dp'
			size: dp(40), dp(40)
			pos_hint: {'top': 1.0}
			size_hint_y: None
			height: dp(25)

			Image:
				source: "hello_baby_logo_band.png"
				allow_stretch: False
				keep_ratio: False
				size: dp(32), dp(32)

			Label:
				text: 'Hello Baby !'
				color: 0, 0, 0, 1
				font_size: 30
				padding: ('5dp', '5dp')
				background_color: 0.6, 0.8, 1, 1

			Image:
				source: "photo_profil.png"
				allow_stretch: False
				keep_ratio: False
				size: dp(32), dp(32)

		BoxLayout:
			orientation: 'vertical'
			spacing: 10
			padding: ('50dp', '350dp')
			pos_hint: {'top': 1.0}

			Label:
				text:'Forums'
				color: 0 , 0 , 0 , 1
				size_hint_y: None
				height: 50
				margin: 20
				canvas.before:
					RoundedRectangle:
						pos: self.pos
						size: self.size
						texture: Gradient.vertical(get_color_from_hex("B76FFF"), get_color_from_hex("DCB9FF"))
						radius: [15, 15, 15, 15]

		BoxLayout:
			orientation: 'vertical'
			spacing: 10
			padding: 50

			Button:
				text:'Echanges'
				color: 0 , 0 , 0 , 1
				size_hint_y: None
				height: 50
				margin: 20
				background_color: 0, 0, 0, 0
				canvas.before:
					RoundedRectangle:
						pos: self.pos
						size: self.size
						texture: Gradient.vertical(get_color_from_hex("F2F200"), get_color_from_hex("FFFF80"))
						radius: [15, 15, 15, 15]
				on_press: root.exchange()

		BoxLayout:
			orientation: 'vertical'
			size_hint_y: None
			height: dp(50)
			canvas:
				Color:
					rgba: 0.25, 0.5, 0.5, 1
				Rectangle:
					pos: self.pos
					size: self.size

			Label:
				text: 'Contact'
				color: 1, 1, 1, 1
				font_size: 20
				height: dp(25)
