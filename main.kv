#:kivy 2.0.0
<RegisterLabel@ButtonBehavior+Label>:
<Login>:
    orientation: 'vertical'
    spacing:'20px'
    padding:'30px'
    canvas:
        Color:
            rgba: 0.6, 0.8, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        size_hint_y: None
        height: dp(25)
        pos_hint: {'top': 0.6}

        Image:
            source:"hello_baby_logo.png"
            size_hint_y: None
        Label:
            text:'Sign In'
            font_size: 20
        TextInput:
            multiline:False
            hint_text:"E-mail"
            size_hint: None,None
            size_hint_x: 1
            height: 30
            font_size: 12
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding : self.height/2 - self.font_size/2
        TextInput:
            multiline:False
            size_hint: None,None
            size_hint_x: 1
            height: 30
            hint_text:"Password"
            font_size: 12
            password:True
            padding : self.height/2 - self.font_size/2
        Button:
            size_hint: None,None
            size_hint_x: 1
            height: 40
            text:'Log In'
            font_size: 14

    BoxLayout:
        orientation:'horizontal'
        pos_hint: {'bottom' : 1.0}
        Label:
            size_hint: None,None
            size_hint_x: 1
            text:'Not a user yet?'
            color: 0,0,0
            font_size: 12
            halign:'left'
        RegisterLabel:
            size_hint: None,None
            size_hint_x: 1
            height: 20
            text:'Register'
            font_size: 12
            color: 0,0,0
            on_press:
                root.manager.current = 'register'
                root.manager.transition.direction = 'left'

<Register>:
    answer_input1: answer_input1
    answer_input2: answer_input2
    answer_input3: answer_input3
    answer_input4: answer_input4
    answer_input5: answer_input5
    answer_input6: answer_input6
    answer_input7: answer_input7
    answer_input8: answer_input8

    BoxLayout:
        orientation: 'vertical'
        spacing: '5dp'

        canvas:
            Color:
                rgba: 0.6, 0.8, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            size_hint: None, None
            size: dp(24), dp(24)
            pos_hint: {'top': 1.0, 'left': 1.0}
            background_normal: "fleche_retour.png"
            on_press:
                root.manager.current = 'login'
                root.manager.transition.direction = 'right'

        BoxLayout:
            orientation: 'vertical'
            spacing: '5dp'

            Label:
                text: 'Hello Baby !'
                color: 0, 0, 0, 1
                font_size: 30
                size_hint: 1.0, 0.2
                padding: ('10dp', '10dp')
                background_color: "#99CCFF"

            Image:
                source: "hello_baby_logo.png"
                allow_stretch: False
                keep_ratio: True
                size_hint_y: 0.5

            Label:
                text: 'Création de compte'
                color: 0, 0, 0, 1
                font_size: 12
                size_hint: 1.0, 0.2
                padding: ('10dp', '10dp')

        GridLayout:
            cols: 2
            spacing: '5dp'
            Label:
                text: 'Prénom :*'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input1
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Nom :'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input2
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Date de naissance :'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input3
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Date du début de grossesse :'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input4
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Email :*'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input5
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Mot de passe :*'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input6
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'Poids actuel :'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input7
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

            Label:
                text: 'En couple :'
                color: 0, 0, 0, 1
            TextInput:
                id: answer_input8
                padding: 20, 20, 20, 20
                font_size: 12
                input_type: "text"

        Label:
            text: '*obligatoire'
            color: 0, 0, 0, 1
            font_size: 10
            size_hint: 0.2, 0.2
            padding: ('10dp', '10dp')

        Button:
            text: 'Créer'
            color: 1, 1, 1, 1
            size_hint: None, None
            size: 150, 50
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_color: 'blue'
            on_press: root.create()
